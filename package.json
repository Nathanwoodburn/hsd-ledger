{
  "name": "hsd-ledger",
  "version": "0.1.0-rc1",
  "description": "Communication and management of ledger devices",
  "keywords": [
    "Handshake",
    "Hardware",
    "Wallet",
    "Ledger",
    "hsd",
    "blockchain"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boymanjor/hsd-ledger.git"
  },
  "main": "./lib/hsd-ledger.js",
  "license": "MIT",
  "authors": [
    "Boyma Fahnbulleh",
    "The Handshake Developers"
  ],
  "bugs": {
    "url": "https://github.com/boymanjor/hsd-ledger/issues"
  },
  "homepage": "https://github.com/boymanjor/hsd-ledger#readme",
  "scripts": {
    "certs": "./scripts/certs",
    "clean": "rm -rf hsd-ledger.js examples/webauthn/app.js examples/webusb/app.js ./certs ./docs",
    "lint": "eslint examples/ lib/ test/ || exit 0",
    "test": "bmocha --reporter spec test/*-test.js",
    "test-usb": "bmocha --allow-multiple --reporter spec test/device/usb-test.js",
    "test-hsd": "bmocha --allow-multiple --reporter spec test/device/hsd-test.js",
    "test-webusb": "./scripts/bmocha-chrome test/device/webusb-test.js",
    "test-webauthn": "./scripts/bmocha-chrome test/device/webauthn-test.js",
    "docs": "jsdoc -c jsdoc.json"
  },
  "dependencies": {
    "blgr": "~0.1.7",
    "bmutex": "~0.1.6",
    "bsert": "~0.0.10",
    "bufio": "^1.0.6",
    "openpgp": "^4.5.5",
    "qrcode": "^1.4.1"
  },
  "optionalDependencies": {
    "busb": "0.0.1"
  },
  "peerDependencies": {
    "hsd": "handshake-org/hsd"
  },
  "devDependencies": {
    "bmocha": "^2.1.1",
    "bpkg": "^0.6.0",
    "bslint": "^5.15.3",
    "hs-client": "^0.0.5",
    "hsd": "handshake-org/hsd",
    "jsdoc": "^3.5.5"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
